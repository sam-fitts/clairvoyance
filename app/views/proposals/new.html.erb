<div class="jumbotron" style="margin: 1% 8%;">
      <%= image_tag "home-right.png", :class => "float-right-small d-none d-md-block" %>
      <h2 class="display-5">Submit a Proposal (for campaign: <%= @project.name %>)</h2><br>
      <%= simple_form_for [@project, @proposal]  do |f| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.input :pdf, label: "Upload a .PDF file with your detailed proposal:  " %>
              <%= f.input :pdf_cache, as: :hidden %>
            </div>
            <div class="form-group col-md-6">
              <%= f.input :bid_amount, label: 'Expected budget ($USD):' %>
            </div>
          </div>
          <%= f.input :description, label: 'Write a brief outline for your proposal:' %>

          <%#= f.submit "Submit Proposal" %>
          <%= f.button :submit, "Submit Proposal", class: "btn btn-primary" %><br>
        <% end %>
</div>
