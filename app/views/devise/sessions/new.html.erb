        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-control formatted-page">
            <h2>Please Log in to Continue</h2>
            <%= f.input :email, required: false, autofocus: true, label: 'Your Email' %>
            <%= f.input :password, required: false, label: "Your Password" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Log in", class: "btn btn-primary" %><br><br>
            <%= render "devise/shared/links" %>
          </div>

    <!--       <div class=""> -->

